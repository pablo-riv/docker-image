<%= semantic_form_for(@company, url: setup_company_path) do |f| %>
  <div class="tsf-content card" style="height: auto; overflow-y: auto;">
    <!-- BEGIN STEP 1-->
    <div class="tsf-step step-1 active">
      <fieldset>
        <legend>Información empresa</legend>
        <div class="row">
          <!-- BEGIN STEP CONTENT-->
          <div class="tsf-step-content">
            <div class="col-lg-12">
              <div class="form-group col-md-6">
                <%= f.input :name, autofocus: true, class: 'form-control', placeholder: 'Shipit SpA', label: 'Nombre de la empresa' %>
              </div>
              <div class="form-group col-md-6">
                <%= f.input :run, autofocus: true, class: 'form-control', placeholder: '11111111-1', label: 'RUT de la empresa' %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-group col-md-6">
                <%= f.input :email_domain, autofocus: true, class: 'form-control', placeholder: 'nombre@dominio.cl', label: 'Correo' %>
              </div>
              <div class="form-group col-md-6">
                <%= f.input :website, autofocus: true, class: 'form-control', placeholder: 'www.shipit.cl', label: 'Sitio web' %>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="form-group col-md-6">
                <%= f.input :commercial_business, autofocus: true, class: 'form-control', placeholder: 'Tipo de comercio', label: 'Tipo de comercio' %>
              </div>
              <div class="col-md-6"></div>
            </div>
            <div class="col-lg-12">
              <div class="col-md-6">
                <%= content_tag :div, id: 'address' do -%>
                  <%= f.semantic_fields_for :address, name: 'Dirección de la Empresa' do |a| -%>
                    <div class="row">
                      <div class="col-md-6">
                        <%= a.input :street, placeholder: 'Av. Providencia', label: 'Dirección' %>
                        <%= a.input :complement, placeholder: 'Depto 220', label: 'Complemento' %>
                      </div>
                      <div class="col-md-6">
                        <%= a.input :number, placeholder: '111', label: 'Número' %>
                        <%= a.input :commune_id, label: 'Comuna', class: 'form-select', as: :select, collection: @communes %>
                      </div>
                    </div>
                  <% end -%>
                <% end -%>
              </div>
              <div class="col-md-6">
                <div class="row">
                  <div class="col-md-6">
                    <label for="company_marketplaces">Plataformas que utilizas para vender</label>
                    <br>
                    <% @marketplaces.each_with_index do |marketplace, index| %>
                      <input type="checkbox" id="company_marketplaces_names_<%=index%>" name="company[sales_channel][names[<%=index%>]][name]" value="<%=marketplace%>"> <%= marketplace %>
                      <br>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <label for="company_marketplaces">Categoria de Productos</label>
                    <br>
                    <% @categories.each_with_index do |category, index| %>
                      <input type="checkbox" id="company_marketplaces_categories_<%=index%>" name="company[sales_channel][categories[<%=index%>]][category]"  value="<%=category%>"> <%= category %>
                      <br>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
          <!-- END STEP CONTENT-->
      </fieldset>
    </div>
    <!-- END STEP 1-->
  </div>
  <!-- END CONTENT-->
  <!-- BEGIN CONTROLS-->
  <div class="tsf-controls " style="display: block;">
    <!-- BEGIN PREV BUTTTON-->
    <button class="btn btn-primary btn-icon btn-left tsf-wizard-btn" data-type="prev" type="button" style="display: none;"><i class="fas fa-arrow-left" aria-hidden="true"></i> Prev</button>
    <!-- END PREV BUTTTON-->
    <!-- BEGIN NEXT BUTTTON-->
    <%= f.submit "Guardar y Continuar", class: "btn btn-primary tsf-wizard-btn" %>
    <!-- END NEXT BUTTTON-->
    <!-- BEGIN FINISH BUTTTON-->
    <button class="btn btn- tsf-wizard-btn" data-type="finish" type="button" style="display: none;">Finish</button>
    <!-- END FINISH BUTTTON-->
    <br>
  </div>
  <!-- END CONTROLS-->
<% end %>
