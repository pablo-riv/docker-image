<% breadcrumb :services %>
<div class="main-content">
  <div class="content-view">
  <!-- shipit -->
    <div class="layout-md">
      <div class="layout-column-md">
        <div class="card">
          <div class="card-block">
            <h2 class="card-title">Configura tu servicio</h2>
            <div class="row text-center">
              <% @services.reverse.each_with_index do |service, index| %>
                <div class="col-md-6">
                  <%= form_tag service_assign_path(service.id), method: :post do %>
                    <div class="card">
                      <div class="card-block">
                        <%= image_tag "#{service.name}.png" %>
                        <h3 class="card-title"><%= get_name_for(service) %></h3>
                        <div class="row">
                          <div class="col-md-12">
                            <% if service.fulfillment? %>
                              <button type="button" id="btn-fulfillment" class="btn btn-primary m-r-xs m-b-xs" data-toggle="modal" data-target="#request-fulfillment">Configurar</button>
                              <p class="purple">Almacenamos tus productos en nuestra bodega y, cada vez que vendas, nos haremos cargo de preparar y enviar tus productos a tus clientes.</p>
                            <% elsif service.pp? %>
                              <%= link_to "Configurar", setup_company_path, class: "btn btn-primary m-r-xs m-b-xs", data: { turbolinks: :false } %>
                              <p class="purple">Retiramos tus productos en tu tienda, oficina o bodega para despacharlos el mismo día. Olvídate de empaquetar e ir al correo.</p>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/configure_fulfillment' %>
