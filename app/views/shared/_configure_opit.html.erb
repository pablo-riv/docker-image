<div class="card">
  <div class="card-block">
    <h5 class="card-title">Elige tus Couriers</h5>
    <div class="row">
      <div class="col-lg-4 col-sm-4">
        <fieldset class="form-group">
          <div class="checkbox m-b-1 pull-left">
            <label>
              <p>Chilexpress</p>
              <input type="checkbox" value="cxp" name="setting[courier]">
            </label>
          </div>
        </fieldset>
      </div>
      <div class="col-lg-4 col-sm-4">
        <fieldset class="form-group">
          <div class="checkbox m-b-1 pull-left">
            <label>
              <p>Starken</p>
              <input type="checkbox" value="stk" name="setting[courier]">
            </label>
          </div>
        </fieldset>
      </div>
      <div class="col-lg-4 col-sm-4">
        <fieldset class="form-group">
          <div class="checkbox m-b-1 pull-left">
            <label>
              <p>Correos</p>
              <input type="checkbox" value="cc" name="setting[courier]">
            </label>
          </div>
        </fieldset>
      </div>
    </div>
    <button class="btn btn-primary btn-sm" id="confirm-couriers">Confirmar</button>
  </div>
</div>

<div class="card hidden" id="prices">
  <div class="card-block">
    <h5 class="card-title"></h5>
    <div class="row">
      <div class="col-lg-12 col-sm-12 btn-container-place"></div>
      <div class="col-lg-12 col-sm-12 table-container"></div>
    </div>
  </div>
</div>

